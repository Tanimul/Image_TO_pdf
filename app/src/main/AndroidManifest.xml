<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.imagetopdf">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ImageTOPdf">
        <activity android:name=".UI.ActivityTrash"></activity>
        <activity android:name=".UI.ActivitySetting" />
        <activity android:name=".UI.ActivityHome" />
        <activity android:name=".UI.ActivityNewPassword" />
        <activity android:name=".UI.ActivityForgotPassword" />
        <activity android:name=".UI.ActivityLetsStart" />
        <activity android:name=".UI.ActivityVerification" />
        <activity android:name=".UI.ActivityLogin" />
        <activity android:name=".UI.ActivitySignUp" />
        <activity android:name=".UI.ActivityWelcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>

    </application>

</manifest>